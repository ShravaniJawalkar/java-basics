<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <appender name="rollingFileAppender" class="ch.qos.logback.rolling.RollingFileAppender">
        <File>log/app.log</File>
        <rollingPolicy class="ch.qos.logback.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>log/app-{yyyy-MM-dd}.log</FileNamePattern>
            <maxHistory>30</maxHistory>
            <timeBasedFileNameAndTriggerringPolicy class="ch.qos.logback.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNameAndTriggerringPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5{level} %logger{36} -%msg%n</pattern>
            </encoder>
        </rollingPolicy>
    </appender>
    <appender name="ErrorFileAppender" class ="ch.qos.logback.core.FileAppender">
        <File>logs/error.log</File>
        <Filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </Filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd} [%thread] %-5{level} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="rollingFileAppender"/>
    </root>
    <logger name="org.example.questions.test.log.assessment" level="debug" additivity="false">
        <appender-ref ref="rollingFileAppender"/>
    </logger>
</Configuration>